import pygame as py
from random import randint,choice
from classes import *
import sys


def main_screen():
    width  = 800
    height = 600
    screen = pygame.display.set_mode((width,height))


    clock = py.time.Clock()


    snake = py.sprite.GroupSingle()
    snake.add(Player)


    while True:

        screen.fill('black')

        for event in pygame.event.get():
            if event.type == pygame.QUIT():
                py.quit
                sys.exit
        
        snake.draw(screen)
        snake.update


        clock.get_fps(60)


main_screen()